# Expand environment variables
# ----------------------------
shopt -s direxpand

# Prompt
# ------
C_DEFAULT="\[\033[m\]"
C_GREEN="\[\033[01;32m\]"
C_LIGHTCYAN="\[\033[01;36m\]"

PS1=${C_GREEN}'$machine_name➜'${C_LIGHTCYAN}' ${PWD#"${PWD%/*/*/*}/"}> '${C_DEFAULT}

# Deafult permissions
# -------------------
umask 022

# Unlimited stack
# ---------------
if [ "$machine_name" != "hera" ]; then
  ulimit -s unlimited
  ulimit -v unlimited
fi
